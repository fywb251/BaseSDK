<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="45dip"
    android:background="#4687c7"
    android:focusableInTouchMode="true" >
    
    <LinearLayout 
        android:id="@+id/title_barleft"
        android:layout_width="60dip"
        android:layout_height="45dip"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
        android:layout_width="15dip"
        android:layout_height="22dip"
        android:background="@drawable/back_chock"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_barcontent"
        android:layout_width="180dip"
        android:layout_height="30dip"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:textStyle="bold"
        android:textSize="20sp" />

    <Button
        android:textSize="12sp"
        android:id="@+id/title_barright"
        android:layout_width="45dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:text="创建"
        android:background="@drawable/normal_button_clickbg"
        android:textColor="#ffffff"
        android:textStyle="bold" />
    
      <Button
        android:textSize="12sp"
        android:id="@+id/chatroom_collect_friend_icon"
        android:layout_width="55dip"
        android:layout_height="30dip"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="@drawable/collect_button_clickbg"
        android:text=""
        android:textColor="#ffffff"
        android:textStyle="bold" 
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/new_progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dip"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>